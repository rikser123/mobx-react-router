{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [ "ES2015", "DOM"],
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "declarationDir": "./dist/types",
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "useDefineForClassFields": true
    },
    "include": [
      "src/**/*.ts",
      "types/*.d.ts"
    ]
  }